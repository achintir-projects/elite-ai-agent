{
  "name": "@ai-app-builder/vscode-extension",
  "version": "0.1.0",
  "description": "VS Code extension for AI App Builder",
  "displayName": "AI App Builder",
  "publisher": "ai-app-builder",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:*"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "build": "vsce package",
    "dev": "tsx watch src/extension.ts",
    "lint": "eslint src --ext .ts",
    "test": "vscode-test"
  },
  "dependencies": {
    "@ai-app-builder/core": "workspace:*",
    "@ai-app-builder/shared": "workspace:*",
    "vscode-languageclient": "^9.0.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20",
    "@types/ws": "^8",
    "typescript": "^5",
    "vscode-test": "^1.6.1",
    "@vscode/vsce": "^2.22.0",
    "tsx": "^4.20.3",
    "eslint": "^9",
    "@typescript-eslint/eslint-plugin": "^7",
    "@typescript-eslint/parser": "^7"
  },
  "contributes": {
    "commands": [
      {
        "command": "ai-app-builder.planTask",
        "title": "AI Builder: Plan Task"
      },
      {
        "command": "ai-app-builder.implement",
        "title": "AI Builder: Implement"
      },
      {
        "command": "ai-app-builder.generateTests",
        "title": "AI Builder: Generate Tests"
      },
      {
        "command": "ai-app-builder.runTests",
        "title": "AI Builder: Run Tests"
      },
      {
        "command": "ai-app-builder.package",
        "title": "AI Builder: Package"
      },
      {
        "command": "ai-app-builder.explain",
        "title": "AI Builder: Explain Code"
      },
      {
        "command": "ai-app-builder.refactor",
        "title": "AI Builder: Refactor Repository"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ai-app-builder.explain",
          "when": "resourceLangId == javascript || resourceLangId == typescript || resourceLangId == python || resourceLangId == java || resourceLangId == go || resourceLangId == rust"
        },
        {
          "command": "ai-app-builder.generateTests",
          "when": "resourceLangId == javascript || resourceLangId == typescript || resourceLangId == python || resourceLangId == java || resourceLangId == go || resourceLangId == rust"
        }
      ]
    }
  },
  "keywords": [
    "vscode",
    "extension",
    "ai",
    "code-generation",
    "multi-agent"
  ],
  "author": "AI App Builder Team",
  "license": "MIT"
}